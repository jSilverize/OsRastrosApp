{
  "rules": {
    "games" : {
      ".read": true,
      ".write": "auth !== null"
    },
    "profiles": {
      ".read": true,
      "$user_id": {
        ".read": true,
        ".write": "$user_id === auth.uid"
      }
    },
    "users": {
      ".read": true,
      "$user_id": {
        ".read": true,
        ".write": "$user_id === auth.uid"
      }
    }
  }
}
